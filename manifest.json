{
  "manifest_version": 3,
  "name": "ModKit",
  "version": "1.0",
  "description": "A simple web surfing mod kit for custom CSS/JS/HTML injections per site.",
  "icons": {
    "128": "icon2_128x128.png"
  },
  "permissions": [
    "storage",
    "scripting",
    "declarativeNetRequestWithHostAccess",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ruleset_1",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "icon2_128x128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_end"
    }
  ]
}