{
  "manifest_version": 3,
  "name": "ModKit",
  "version": "1.0",
  "description": "A simple web surfing mod kit for custom CSS/JS/HTML injections per site.",
  "icons": {
    "128": "icon2_128x128.png"
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "icon2_128x128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_end"
    }
  ]
}